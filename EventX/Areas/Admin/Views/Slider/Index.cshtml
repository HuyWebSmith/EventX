@model List<EventX.Models.SliderModel>
@{
    ViewData["Title"] = "Thêm Slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">📸 Danh sách Slider</h2>
        <a href="@Url.Action("Create", "Slider")" class="btn btn-success mb-3">
            <i class="fa fa-plus me-2"></i> Thêm Slider Mới
        </a>

    </div>

    <table class="table table-bordered table-striped shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Hình ảnh</th>
                <th>Tiêu đề</th>
                <th>Mô tả</th>
                <th>Link</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImagePath" width="120" height="60" style="object-fit:cover; border-radius:5px;" />
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="@item.Link" target="_blank" class="btn btn-sm btn-outline-primary">Xem</a>
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Hiển thị</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ẩn</span>
                        }
                    </td>
                    <td>
                        <!-- Thêm nút Edit/Delete ở đây nếu cần -->
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>