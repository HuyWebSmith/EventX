@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex justify-content-center align-items-center mb-3 mt-2">
    <h2>Quản lý Role</h2>
</div>
<table class="table table-bordered table-hover">
    <thead class="table-dark text-center">
        <tr>
            <th>FullName</th>
            <th>Email</th>
            <th>Role</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var user in Model)
        {
            <tr>
                <td class="align-middle">@(user?.FullName ?? "Unknown")</td>
                <td class="align-middle">@user.Email</td>
                <td class="align-middle">
                    @(string.IsNullOrEmpty(user.Roles) ? "<span class='text-danger'>Chưa có role</span>" : user.Roles)
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary btn-sm" href="@Url.Action("EditRole", new { userId = user.UserId })">
                        <i class="fa-solid fa-pen-to-square"></i>

                    </a>

                </td>
            </tr>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

    </tbody>
</table>
