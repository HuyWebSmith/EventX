@model EventX.Models.Slider
@{
    ViewData["Title"] = "Edit Slider Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="ms-4 mt-2">@ViewData["Title"]</h2>
<form class="ms-4" asp-area="Admin" asp-controller="Sliders" asp-action="Edit" enctype="multipart/form-data" method="post">
    <div class="form-group mb-3">
        <label for="Title">Tiêu đề</label>
        <input type="text" name="Title" id="Title" class="form-control" value="@Model.Title" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label for="Link">Event ID</label>
        <input type="text" name="Link" id="Link" class="form-control" value="@Model.Link" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Description">Mô tả</label>
        <textarea name="Description" id="Description" class="form-control">@Model.Description</textarea>
        <span class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Order">Vị trí</label>
        <input name="Order" type="number" class="form-control" value="@Model.Order" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Current Image:</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Slider Image" style="max-width: 300px;" />
        }
    </div>

    <div class="form-group mb-3">
        <label for="ImageFile">Upload New Image</label>
        <input type="file" name="ImageFile" id="ImageFile" class="form-control-file" />
    </div>

    <input type="hidden" name="Id" value="@Model.Id" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

