@{
    ViewData["Title"] = "Trang chủ Host";
    Layout = "~/Areas/Host/Views/Shared/_HostLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-H5Emcl9P8kZxOON2Zp2Y57v/1CR3+lqG+q5KZ62u0OvDQozlD4
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold text-primary mb-4">🎉 Chào mừng Nhà tổ chức!</h1>
                <p class="lead text-muted mb-4">
                    Quản lý và tạo sự kiện một cách dễ dàng, nhanh chóng và chuyên nghiệp.
                </p>
                <a href="/Host/Event/Add" class="btn btn-primary btn-lg px-4">
                    + Tạo sự kiện mới
                </a>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">📊 Thống kê</h5>
                        <p class="card-text">Xem số lượng người tham gia, doanh thu, và các chỉ số quan trọng.</p>
                        <a href="/Host/Event/index" class="btn btn-outline-primary stretched-link">Xem ngay</a>

                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">📁 Sự kiện của bạn</h5>
                        <p class="card-text">Quản lý danh sách sự kiện đã tạo, chỉnh sửa và theo dõi trạng thái.</p>
                        <a href="/Host/Event/index" class="btn btn-outline-primary stretched-link">Quản lý</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">⚙️ Cài đặt</h5>
                        <p class="card-text">Chỉnh sửa hồ sơ cá nhân và thiết lập thông tin tổ chức.</p>
                        <a href="/Identity/Account/Manage" class="btn btn-outline-primary stretched-link">Thiết lập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
